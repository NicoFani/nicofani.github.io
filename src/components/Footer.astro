<style>
  footer {
    width: 100%;
    padding: 30px 100px;
    margin-top: 100px;
    display: flex;
    justify-content: space-between;
    background-color: #0b0a2b;
  }
  div {
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  a:hover {
    scale: 1.1;
  }
  .name-container {
    display: flex;
    align-items: center;
  }
  span {
    font-size: 1.5rem;
    font-weight: bold;
  }
  strong {
    color: #d768ff;
  }
  .nav-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  li {
    list-style: none;
    margin: 10px 0;
  }
  a {
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
    cursor: pointer;
  }
  .nav-item:hover {
    color: #d768ff;
  }
  .social-container {
    display: flex;
    flex-direction: row;
    gap: 10px;
    margin-top: 10px;
  }

  .social-container h3 {
    margin-bottom: 10px;
  }

  @media (max-width: 520px) {
    footer {
      padding: 30px 20px;
      flex-direction: column;
      gap: 20px;
    }
    .name-container {
      flex-direction: column;
      gap: 20px;
    }

    .nav-container {
      margin-top: 20px;
    }
    li {
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }
</style>
