---
const { id } = Astro.props
---

<section id={id}>
  <slot />
</section>

<style>
  section {
    width: 50%;
    margin-top: 200px;
  }
  div {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  span {
    margin: 0;
    padding: 0;
    font-size: 1.5rem;
    font-weight: bold;
    color: aliceblue;
  }
  slot {
    display: block;
    margin-top: 10px;
  }

  @media (max-width: 768px) {
    section {
      width: 90%;
      margin-top: 100px;
    }
  }
</style>
