---
const { id } = Astro.props
---

<section id={id}>
  <slot />
</section>

<style>
  section {
    width: 50%;
    margin-top: 200px;
    view-timeline-name: --section;
    view-timeline-axis: block;
    animation-timeline: --section;
    animation-name: show;
    animation-range: entry 25% cover 30%;
    animation-fill-mode: both;
  }
  div {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  span {
    margin: 0;
    padding: 0;
    font-size: 1.5rem;
    font-weight: bold;
    color: aliceblue;
  }
  slot {
    display: block;
    margin-top: 10px;
  }
  @keyframes show {
    from {
      opacity: 0;
      scale: 25%;
    }
    to {
      opacity: 1;
      scale: 100%;
    }
  }

  @media (max-width: 768px) {
    section {
      width: 90%;
      margin-top: 100px;
    }
  }
</style>
